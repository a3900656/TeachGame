<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/pg1" tools:context=".GameActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="我的基本資訊"
                android:id="@+id/button1"
                android:layout_column="0"
                android:onClick="personalInfoOnClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="身高體重表"
                android:id="@+id/button2"
                android:layout_column="1"
                android:onClick="checkOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="GAME"
                android:id="@+id/button3"
                android:layout_column="0"
                android:onClick="gameOnClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="教學"
                android:id="@+id/button4"
                android:layout_column="1"
                android:onClick="teachOnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="額外資訊"
                android:id="@+id/button5"
                android:layout_column="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:text="掰掰"
                android:id="@+id/button6"
                android:layout_column="1"
                android:onClick="exitOnClick" />
        </TableRow>
    </TableLayout>
</FrameLayout>
