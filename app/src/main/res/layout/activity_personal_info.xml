<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffffff"
    tools:context="com.personal.ken.teachgame.PersonalInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5" >
            <ImageView
                android:id="@+id/IV_AddPhoto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_add_photo"
                android:onClick="personalpicOnClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="我的基本資料"
                android:layout_marginBottom="10dp"
                android:textSize="40dp"
                android:textColor="#000000"
                android:id="@+id/textView5"
                android:layout_above="@+id/IV_AddPhoto"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5" >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:stretchColumns="0,1">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字："
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical|center"
                        android:id="@+id/nametextView"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="235dp"
                        android:layout_height="40dp"
                        android:textColor="#FF4DAFFF"
                        android:textSize="30dp"
                        android:text="ken"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center"
                        android:background="@drawable/bg_page"
                        android:id="@+id/nameeditText"
                        android:layout_column="1"/>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年級："
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical|center"
                        android:id="@+id/gradetextView"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="235dp"
                        android:layout_height="40dp"
                        android:textColor="#FF4DAFFF"
                        android:textSize="30dp"
                        android:text="年級"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center"
                        android:background="@drawable/bg_page"
                        android:id="@+id/gradeditText"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高："
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical|center"
                        android:id="@+id/hieghttextView"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="235dp"
                        android:layout_height="40dp"
                        android:textColor="#FF4DAFFF"
                        android:textSize="30dp"
                        android:text="cm"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center"
                        android:background="@drawable/bg_page"
                        android:id="@+id/heighteditText"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="體重："
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:gravity="center_vertical|center"
                        android:id="@+id/weighttextView"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="235dp"
                        android:layout_height="40dp"
                        android:textColor="#FF4DAFFF"
                        android:textSize="30dp"
                        android:text="kg"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center_vertical|center"
                        android:background="@drawable/bg_page"
                        android:id="@+id/weighteditText"
                        android:layout_column="1"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="確定"
        android:background="@drawable/checkbutton2"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>
